<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="@string/StringaCosaVisitare"
            android:textStyle="bold"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/grottedipertosa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/StringaCosaVisitareGrotte"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/bottoneGrotteDiPertosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bottone_cosa_visitare_total"
            android:text="@string/StringaCosaVisitareMore"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/museospeleoarcheologico" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/StringaCosaVisitareMuseoSpeleo"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/bottoneMuseoSpeleoArcheologico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bottone_cosa_visitare_total"
            android:text="@string/StringaCosaVisitareMore"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/museodelsuolo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/StringaCosaVisitareMuseoSuolo"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/bottoneMuseoDelSuolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bottone_cosa_visitare_total"
            android:text="@string/StringaCosaVisitareMore"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/bottoneAltriAttrattori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bottone_cosa_visitare_total"
            android:text="@string/StringaCosaVisitareMoreLocalita"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>


</ScrollView>